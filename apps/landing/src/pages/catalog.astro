---
import Layout from "../layouts/layout.astro";
---

<script>
  const url = new URLSearchParams(window.location.search);
  const page = url.get("page");
  if (page) {
    const catalog = document.getElementById("catalog") as HTMLIFrameElement;
    catalog.src = `https://online.anyflip.com/jmlf/ifub/mobile/index.html#p=${page}`;
  }
</script>

<Layout>
  <main class="grow flex min-h-full">
    <iframe
      id="catalog"
      class="w-screen min-h-full"
      title="Catalog"
      loading="eager"
      src="https://online.anyflip.com/jmlf/ifub/mobile/index.html"></iframe>
  </main>
</Layout>
