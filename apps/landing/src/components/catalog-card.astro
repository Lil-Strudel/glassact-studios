---
interface Props {
  href: string;
  title: string;
  description: string;
}

const { href, title, description } = Astro.props;
---

<a
  href={href}
  class="pointer block rounded-xl border border-gray-100 p-4 shadow-sm hover:border-primary hover:ring-1 hover:ring-gray-200 focus:outline-none focus:ring"
>
  <span class="inline-block rounded-lg bg-gray-50 p-3">
    <slot />
  </span>

  <h2 class="mt-2 font-bold">{title}</h2>

  <p class="hidden sm:mt-1 sm:block sm:text-sm sm:text-gray-600">
    {description}
  </p>
</a>
