{
  "name": "@glassact/data",
  "version": "0.0.1",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./dist/src/*.d.ts",
      "default": [
        "./src/*.ts",
        "./src/*.tsx"
      ]
    }
  },
  "scripts": {
    "build": "tsc",
    "gen": "source ./.env && jet -dsn=${DATABASE_DSN} -path=./pkg/gen",
    "migrate/new": "migrate create -seq -ext=.sql -dir=./migrations",
    "migrate/up": "source ./.env && migrate -path ./migrations -database ${DATABASE_DSN} up",
    "migrate/goto": "source ./.env && migrate -path ./migrations -database ${DATABASE_DSN} goto",
    "migrate/down": "source ./.env && migrate -path ./migrations -database ${DATABASE_DSN} down",
    "migrate/force": "source ./.env && migrate -path ./migrations -database ${DATABASE_DSN} force",
    "psql": "source ./.env && psql ${DATABASE_DSN}",
    "seed": "source ./.env && psql ${DATABASE_DSN} -a -f ./seed.sql",
    "test": "cd ../.. && go test -v ./libs/data/pkg/...",
    "test:coverage": "cd ../.. && go test -v -coverprofile=coverage.out ./libs/data/pkg/... && go tool cover -html=coverage.out -o coverage.html",
    "test:race": "cd ../.. && go test -v -race ./libs/data/pkg/...",
    "test:bench": "cd ../.. && go test -v -bench=. -benchmem ./libs/data/pkg/...",
    "test:short": "cd ../.. && go test -v -short ./libs/data/pkg/..."
  },
  "devDependencies": {
    "type-fest": "^5.4.3",
    "typescript": "catalog:"
  }
}
